<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/autoPageLayout">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autopageTableLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="17dp"
            android:weightSum="4"
            android:id="@+id/autoBaseline">

            <TextView
                android:text="Baseline: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tableLayout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/autoTask0"
                android:layout_weight="1"
                android:textSize="@dimen/text_medium"
                android:gravity="center_vertical"/>

            <RadioGroup android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/autoBaselineGroup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/tableLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:id="@+id/autoBaselineFailed"
                    android:checked="false"
                    android:text="Success"
                    android:textSize="@dimen/text_small"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/tableLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/autoBaselineComplete"
                    android:layout_weight="1"
                    android:text="Failed"
                    android:textSize="@dimen/text_small"/>


            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:weightSum="3">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/autoCube"
                android:spinnerMode="dropdown"
                android:layout_marginTop="10dp"
                android:layout_weight="0.75"
                android:textSize = "@dimen/text_small"
                android:layout_gravity="top"
                android:gravity="left"/>

            <RadioGroup android:orientation="horizontal"
                android:layout_weight="2.25"
                android:weightSum="2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/autoCubeGroup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/tableLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:id="@+id/autoCubeSuccess"
                    android:checked="false"
                    android:text="Success"
                    android:textSize="@dimen/text_small"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/tableLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/autoCubeFailed"
                    android:layout_weight="1"
                    android:text="Failed"
                    android:textSize="@dimen/text_small"/>


            </RadioGroup>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_height="match_parent"
                android:text = "Picked up cube:"
                android:textSize="@dimen/text_medium"
                android:gravity="center"
                android:paddingRight="15dp"/>
            <CheckBox
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </TableRow>
    </TableLayout>


</android.support.percent.PercentRelativeLayout>