<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Pickup"
                android:layout_weight="1"
                android:id="@+id/pickupHatch"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Failed Pickup"
                android:layout_weight="1"
                android:id="@+id/failPickupHatch"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Drop off"
                android:layout_weight="1"
                android:id="@+id/failDropHatch"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Failed dropoff"
                android:layout_weight="1"
                android:id="@+id/dropHatch"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">

            <SurfaceView
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:layout_gravity="top|center"
                android:layout_weight="3"
                android:id="@+id/fieldCanvas">

            </SurfaceView>

            <Button
                android:id="@+id/undo"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="Undo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Pickup"
                android:layout_weight="1"
                android:id="@+id/pickupCargo"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Failed Pickup"
                android:layout_weight="1"
                android:id="@+id/failPickupCargo"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Drop off"
                android:layout_weight="1"
                android:id="@+id/failDropCargo"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Failed dropoff"
                android:layout_weight="1"
                android:id="@+id/dropCargo"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
