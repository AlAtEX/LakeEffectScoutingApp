<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/autoPageLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/autopageTableLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">


            <TableRow
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="17dp"
                android:weightSum="4">

                <TextView
                    android:text="Start Position: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tableLayout"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_medium"
                    android:gravity="center_vertical"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/autoStartLocation"
                    android:spinnerMode="dropdown"
                    android:layout_weight="3"
                    android:textSize = "@dimen/text_small"
                    android:layout_gravity="top"
                    android:gravity="center"/>

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_marginBottom="17dp"
                android:weightSum="4">
                <TextView
                    android:layout_height="match_parent"
                    android:text = "Left hab area: "
                    android:textSize="@dimen/text_medium"
                    android:gravity="left|center_vertical"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/leftHab"
                    android:spinnerMode="dropdown"
                    android:layout_weight="3"
                    android:textSize = "@dimen/text_small"
                    android:layout_gravity="top"
                    android:gravity="center"/>
            </TableRow>


            <!--TODO: change variable names-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_marginBottom="17dp"
                android:weightSum="4"

                android:id="@+id/notAutoBaseline">

                <TextView
                    android:text="Starts with: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tableLayout"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/notAutoTask0"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_medium"
                    android:gravity="center_vertical"/>

                <RadioGroup android:orientation="horizontal"
                    android:layout_weight="3"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/startingObjects">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/tableLayout"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_weight="1"
                        android:id="@+id/startingObjectsCargo"
                        android:checked="false"
                        android:text="Cargo"
                        android:textSize="@dimen/text_small"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/tableLayout"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/startingObjectsHatch"
                        android:layout_weight="1"
                        android:text="Hatch"
                        android:textSize="@dimen/text_small"/>


                </RadioGroup>
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:layout_gravity="bottom"
                android:weightSum="4">
                <TextView
                    android:layout_height="match_parent"
                    android:text = "My happiness:"
                    android:textSize="@dimen/text_medium"
                    android:gravity="left|center_vertical"/>

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/myHappiness"
                    android:spinnerMode="dropdown"
                    android:layout_weight="3"
                    android:textSize = "@dimen/text_small"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:max="100"
                    android:progress="80"
                    />
            </TableRow>

        </TableLayout>
    </ScrollView>

</android.support.percent.PercentRelativeLayout>