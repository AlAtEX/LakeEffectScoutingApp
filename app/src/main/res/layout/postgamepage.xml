<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id = "@+id/endgamePageLayout">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/endgameTableLayout"
            android:layout_margin="10dp"
            android:rowCount="9"
            android:columnCount="6">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Climb: "
                android:paddingVertical="10dp"
                android:textSize="@dimen/text_medium"
                android:gravity="center"/>

            <Spinner
                android:id="@+id/endgameClimbType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnSpan="5"
                android:layout_gravity="center_vertical" />

            <Spinner
                android:id="@+id/endgameClimb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="5"
                android:layout_gravity="center_vertical" />

            <TextView
                android:text="Robots Carried:"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_medium"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center_vertical"/>
            <ca.lakeeffect.scoutingapp.Counter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/robotsCarried"
                android:paddingVertical="10dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnSpan="2"/>

            <CheckBox
                android:layout_row="3"
                android:layout_column="0"
                android:text="Defense"
                android:textSize="@dimen/text_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:id="@+id/defense" />

            <CheckBox
                android:layout_row="3"
                android:layout_column="1"
                android:text="Died"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:id="@+id/died"
                android:textSize="@dimen/text_small" />
            <CheckBox
                android:layout_row="3"
                android:layout_column="2"
                android:text="Tipped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:id="@+id/tipped"
                android:textSize="@dimen/text_small" />

            <TextView
                android:text="Drive Ability:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_medium"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_row="4"
                android:layout_column="1"
                android:layout_columnSpan="2">
                <!--This is a workaround to make #109 work as seen in https://stackoverflow.com/a/39653856/1985387-->
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/driveRating"
                    android:numStars="4"
                    android:stepSize="0.5"
                    android:isIndicator="false"/>
            </LinearLayout>

            <TextView
                android:text="Intake Ability:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_medium"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_row="5"
                android:layout_column="1"
                android:layout_columnSpan="2">
                <!--This is a workaround to make #109 work as seen in https://stackoverflow.com/a/39653856/1985387-->
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/intakeRating"
                    android:numStars="4"
                    android:stepSize="0.5"
                    android:isIndicator="false"/>

            </LinearLayout>

            <TextView
                android:text="Defence Ability:"
                android:id="@+id/defenceText"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_medium"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_row="6"
                android:layout_column="1"
                android:layout_columnSpan="2">
                <!--This is a workaround to make #109 work as seen in https://stackoverflow.com/a/39653856/1985387-->
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/defenceRating"
                    android:numStars="4"
                    android:stepSize="0.5"
                    android:isIndicator="false"/>

            </LinearLayout>

        </GridLayout>



    </android.support.percent.PercentRelativeLayout>
</ScrollView>