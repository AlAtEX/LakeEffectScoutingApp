<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/autoPageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableLayout
            android:id="@+id/pregameTableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">

            <TableRow
                android:id="@+id/startPosition"
                android:layout_width="fill_parent"
                android:layout_marginBottom="17dp"
                android:weightSum="4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tableLayout"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Start Position: "
                    android:textSize="@dimen/text_medium" />

                <RadioGroup
                    android:id="@+id/startPositionGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/startHab1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/tableLayout"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:checked="false"
                        android:text="Level 1"
                        android:textSize="@dimen/text_small" />

                    <RadioButton
                        android:id="@+id/startHab2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/tableLayout"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:text="Level 2"
                        android:textSize="@dimen/text_small" />


                </RadioGroup>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5">
                <View
                    android:layout_weight="1"/>
                <Spinner
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:id="@+id/startPositionSpinner"/>
                <View
                    android:layout_weight="1"/>

            </TableRow>

            <TableRow
                android:id="@+id/preload"
                android:layout_width="fill_parent"
                android:layout_marginBottom="17dp"
                android:weightSum="4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tableLayout"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Preload: "
                    android:textSize="@dimen/text_medium" />

                <RadioGroup
                    android:id="@+id/preloadGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/preloadCargo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/tableLayout"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:checked="false"
                        android:text="Cargo"
                        android:textSize="@dimen/text_small" />

                    <RadioButton
                        android:id="@+id/preloadHatch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/tableLayout"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:text="Hatch"
                        android:textSize="@dimen/text_small" />


                </RadioGroup>
            </TableRow>

        </TableLayout>
    </ScrollView>

</android.support.percent.PercentRelativeLayout>