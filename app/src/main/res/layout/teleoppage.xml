<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hatch"
                android:textSize="@dimen/text_small"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:id="@+id/hatchLabel"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Pickup"
                android:layout_weight="1"
                android:id="@+id/pickupHatch"
                app:backgroundTint="#ffff84"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Failed Pickup"
                android:layout_weight="1"
                android:id="@+id/failPickupHatch"
                app:backgroundTint="#ffff84"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Drop off"
                android:layout_weight="1"
                android:id="@+id/failDropHatch"
                android:backgroundTint="#ffff84"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Failed dropoff"
                android:layout_weight="1"
                android:id="@+id/dropHatch"
                app:backgroundTint="#ffff84"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">

            <SurfaceView
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:layout_gravity="top|center"
                android:layout_weight="3"
                android:id="@+id/fieldCanvas">

            </SurfaceView>

            <Button
                android:id="@+id/undo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="Undo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargo"
                android:textSize="@dimen/text_small"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:id="@+id/cargoLabel"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Pickup"
                android:layout_weight="1"
                android:id="@+id/pickupCargo"
                app:backgroundTint="#ffd38e"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Failed Pickup"
                android:layout_weight="1"
                android:id="@+id/failPickupCargo"
                app:backgroundTint="#ffd38e"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Drop off"
                android:layout_weight="1"
                android:id="@+id/failDropCargo"
                app:backgroundTint="#ffd38e"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Failed dropoff"
                android:layout_weight="1"
                android:id="@+id/dropCargo"
                app:backgroundTint="#ffd38e"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
